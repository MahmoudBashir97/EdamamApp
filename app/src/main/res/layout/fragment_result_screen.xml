<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

 <data>
  <import type="android.view.View"/>
 </data>

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     tools:context=".ResultScreenFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:layout_margin="@dimen/_10sdp"
      android:background="@drawable/result_back">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Nutrition Facts"
       android:layout_gravity="center_horizontal"
       android:textSize="35sp"
       android:textColor="@color/black"
       android:textStyle="bold"
       android:layout_marginTop="10dp" />

   <View
       android:layout_width="match_parent"
       android:layout_height="10dp"
       android:background="@color/black"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:layout_marginTop="10dp" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Amount Per Serving"
       android:layout_marginLeft="30dp"
       android:textSize="20sp"
       android:textColor="@color/black"
       android:textStyle="bold"
       android:layout_marginTop="20dp" />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:layout_marginTop="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/txt_calories_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="720"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />
   </RelativeLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="6dp"
       android:background="@color/black"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:layout_marginTop="10dp" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="% Daily Value*"
       android:textSize="16sp"
       android:textColor="@color/black"
       android:textStyle="normal"
       android:layout_gravity="end"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp" />

   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/black"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:layout_marginTop="10dp" />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:layout_marginTop="15dp">

    <TextView
        android:id="@+id/total_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Total Fat"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_fat_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/total_txt"
        android:text="1.1g"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txt_fat_daily_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="2%"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
   </RelativeLayout>


   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/black"
       android:layout_marginLeft="50dp"
       android:layout_marginRight="30dp"
       android:layout_marginTop="10dp" />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="50dp"
       android:layout_marginRight="30dp"
       android:layout_marginTop="15dp">

    <TextView
        android:id="@+id/saturated_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Saturated Fat "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/quantity_saturated_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/saturated_txt"
        android:text="0.3 g"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txt_saturated_daily_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="2%"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
   </RelativeLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/black"
       android:layout_marginLeft="50dp"
       android:layout_marginRight="30dp"
       android:layout_marginTop="10dp" />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="50dp"
       android:layout_marginRight="30dp"
       android:layout_marginTop="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Trans Fat - "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal" />


   </RelativeLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/black"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:layout_marginTop="10dp" />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:layout_marginTop="15dp">

    <TextView
        android:id="@+id/cholesterol_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Cholesterol "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/quantity_chol_mg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0mg"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_toRightOf="@+id/cholesterol_txt"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/txt_chol_daily_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="2%"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
   </RelativeLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/black"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:layout_marginTop="10dp" />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:layout_marginTop="15dp">

    <TextView
        android:id="@+id/sodium_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Sodium"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/quantity_sodium_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.1g"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_toRightOf="@+id/sodium_txt"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/txt_sodium_daily_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="2%"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
   </RelativeLayout>


  </LinearLayout>

 </RelativeLayout>
</layout>